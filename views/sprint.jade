doctype html
html(lang="en")
    head
        title= People
        include ./partials/head.jade

    body
        include ./partials/nav.jade
        .container
            .row
                .col-xs-12.col-sm-8.col-sm-offset-2
                    .row
                        .col-sm-8
                            h2.pull-left.top= title
                        .col-sm-4
                            .btn-group.pull-right
                                button.btn.btn-default.btn-sm.dropdown-toggle(type="button" data-toggle="dropdown") created&nbsp;
                                    span.caret
                                ul.dropdown-menu(role="menu")
                                    li
                                        a priority
                                    li
                                        a updated
                    hr
                    each issues,val in group
                        h3=val
                        include ./partials/sprint/list.jade
        include ./partials/scripts.jade
